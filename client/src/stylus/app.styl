@import nib
global-reset()

body, html
  font-family "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
  color #333
  background-color #f6f5f5
  font-size 14px

input
  color inherit
  font-size inherit

button
  color1 = #eaeaea
  color2 = #e8e8e8
  color3 = #ddd
  color4 = #d5d4d4

  outline none
  display inline-block
  box-sizing border-box
  height 40px
  line-height 36px
  border 1px solid #a0a0a0
  border-radius 5px
  padding 0
  box-shadow inset 0 2px 0px 0px #fdfdfd
  cursor pointer
  color #464646
  text-shadow 0 1px #f1f0f0
  font-size inherit
  font-weight bold

  background-color color1
  background-image linear-gradient(color1, color2 50%, color3 50%, color4)

  &:hover
    background-color darken(color2, 3%)
    background-image linear-gradient(
      darken(color1, 3%),
      darken(color2, 3%) 50%,
      darken(color3, 3%) 50%,
      darken(color4, 3%))

  &:active
    background-color darken(color2, 6%)
    background-image linear-gradient(
      darken(color1, 6%),
      darken(color2, 6%) 50%,
      darken(color3, 6%) 50%,
      darken(color4, 6%))

a
  link-color = #448ccb
  color link-color
  text-decoration none

  &:hover
    color darken(link-color, 20%)

#todos
  width 500px
  background-color white
  border-radius 5px
  margin 100px auto 30px;

  h1
    font-size 30px
    line-height 100px
    text-align center
    font-weight bold

  .divider
    background-color #f5f5f5
    border-top 1px dashed #d2d0d0
    border-bottom 1px dashed white

  form
    margin-top 20px
    padding 0 20px

    input[name=title]
      transition border-color ease-in-out 100ms
      box-sizing border-box
      display inline-block
      border 1px solid #b9b8b8
      border-radius 5px
      box-shadow inset 0 2px 3px -2px #b9b8b9
      line-height 20px
      height 40px
      padding 9px 10px
      width 305px
      outline none

      &:focus
        border-color #448ccb

    button
      vertical-align top
      width 145px
      margin-left 10px

  ul
    margin-top 20px
    margin-bottom 70px

  footer
    height 55px
    line-height 55px
    padding 0 10px

    .item-count
      float left
      color #999
      margin-left 10px

    .mark-all
      display inline-block
      float right
      padding 0 10px

.todo
  position relative
  padding 5px 10px 5px 45px

  &:nth-child(odd)
    background-color #f4f7fa

  input[type=checkbox]
    display none

    + label
      todo-unchecked-color-1 = #f7f5f3
      todo-unchecked-color-2 = #e6e7e6

      display inline-block
      position absolute
      left 10px
      top 7px
      padding 10px
      height 19px
      cursor pointer

      .box
        position relative
        display inline-block
        width 15px
        height 15px
        border 2px solid #d8d9d9
        border-radius 6px

        &:before
          position absolute
          top 0
          left 0
          display block
          content ""
          border 1px solid #888
          border-radius 4px
          width 13px
          height 13px
          box-shadow inset 0 1px 0px 0px rgba(255, 255, 255, 0.3)
          background-color todo-unchecked-color-1
          background-image linear-gradient(todo-unchecked-color-1,
                                           todo-unchecked-color-2)

      &:hover
        .box:before
          background-color darken(todo-unchecked-color-1, 5%)
          background-image linear-gradient(darken(todo-unchecked-color-1, 5%),
                                           darken(todo-unchecked-color-2, 5%))

      &:active
        .box:before
          background-color darken(todo-unchecked-color-1, 10%)
          background-image linear-gradient(darken(todo-unchecked-color-1, 10%),
                                           darken(todo-unchecked-color-2, 10%))

    &:checked + label
      todo-checked-color-1 = #2e8bb6
      todo-checked-color-2 = #2487b1

      .box
        &:before
          border-color #336280
          background-color todo-checked-color-1
          background-image linear-gradient(todo-checked-color-1,
                                           todo-checked-color-2)

        &:after
          font-weight bold
          position absolute
          top 2px
          left 2px
          display block
          line-height 10px
          content "âœ“"
          color #0e4263
          text-shadow 0px 1px 0px rgba(255, 255, 255, 0.2)


      &:hover .box:before
        background-color darken(todo-checked-color-1, 5%)
        background-image linear-gradient(darken(todo-checked-color-1, 5%),
                                         darken(todo-checked-color-2, 5%))

      &:active .box:before
        background-color darken(todo-checked-color-1, 10%)
        background-image linear-gradient(darken(todo-checked-color-1, 10%),
                                         darken(todo-checked-color-2, 10%))

    &:checked ~ input[name=title]
      color #a0a0a0
      text-decoration line-through

  input[name=title]
    background transparent
    box-sizing border-box
    height 40px
    border 0
    width 100%
    outline none
