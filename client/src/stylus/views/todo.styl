.todo
  position relative
  padding 5px 10px 5px 45px

  input[type=checkbox]
    display none

    + label
      todo-unchecked-color-1 = #f7f5f3
      todo-unchecked-color-2 = #e6e7e6

      display inline-block
      position absolute
      left 10px
      top 7px
      padding 10px
      height 19px
      cursor pointer

      .box
        position relative
        display inline-block
        width 15px
        height 15px
        border 2px solid #d8d9d9
        border-radius 6px

        &:before
          position absolute
          top 0
          left 0
          display block
          content ""
          border 1px solid #888
          border-radius 4px
          width 13px
          height 13px
          box-shadow inset 0 1px 0px 0px rgba(255, 255, 255, 0.3)
          background-color todo-unchecked-color-1
          background-image linear-gradient(todo-unchecked-color-1,
                                           todo-unchecked-color-2)

      &:hover
        .box:before
          background-color darken(todo-unchecked-color-1, 5%)
          background-image linear-gradient(darken(todo-unchecked-color-1, 5%),
                                           darken(todo-unchecked-color-2, 5%))

      &:active
        .box:before
          background-color darken(todo-unchecked-color-1, 10%)
          background-image linear-gradient(darken(todo-unchecked-color-1, 10%),
                                           darken(todo-unchecked-color-2, 10%))

    &:checked + label
      todo-checked-color-1 = #2e8bb6
      todo-checked-color-2 = #2487b1

      .box
        &:before
          border-color #336280
          background-color todo-checked-color-1
          background-image linear-gradient(todo-checked-color-1,
                                           todo-checked-color-2)

        &:after
          font-weight bold
          position absolute
          top 2px
          left 2px
          display block
          line-height 10px
          content "âœ“"
          color #0e4263
          text-shadow 0px 1px 0px rgba(255, 255, 255, 0.2)


      &:hover .box:before
        background-color darken(todo-checked-color-1, 5%)
        background-image linear-gradient(darken(todo-checked-color-1, 5%),
                                         darken(todo-checked-color-2, 5%))

      &:active .box:before
        background-color darken(todo-checked-color-1, 10%)
        background-image linear-gradient(darken(todo-checked-color-1, 10%),
                                         darken(todo-checked-color-2, 10%))

    &:checked ~ input[name=title]
      color #a0a0a0
      text-decoration line-through

  input[name=title]
    background transparent
    box-sizing border-box
    height 40px
    border 0
    width 100%
    outline none
