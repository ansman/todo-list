#todos
  width 500px
  background-color white
  border-radius 5px
  margin 100px auto 30px;

  h1
    font-size 30px
    line-height 100px
    text-align center
    font-weight bold

  .divider
    background-color #f5f5f5
    border-top 1px dashed #d2d0d0
    border-bottom 1px dashed white

  ul
    margin-top 20px
    margin-bottom 70px

    li:nth-child(odd)
      background-color #f4f7fa

  footer
    height 55px
    line-height 55px
    padding 0 10px
    font-size 13px

    .item-count
      float left
      color #999
      margin-left 10px

    .mark-all
      outline none
      text-color = #448ccb
      cursor pointer
      background transparent
      border none
      display inline-block
      float right
      height 100%
      padding 0 10px
      color text-color
      font-size inherit

      &:hover
        color darken(text-color, 20%)
